<h1>{{title}}</h1>

{{#if courses.length}}
    <table>
        <thead>
            <tr>
                <th>Название:</th>
                <th>Количество:</th>
                <th>Действия:</th>
            </tr>
        </thead>
        <tbody>
            {{#each courses}}
                <tr>
                    <td>{{title}}</td>
                    <td>{{count}}</td>
                    <td>
                        <button class="btn btn-small">Удалить</button>
                    </td>
                </tr>
            {{/each}}
        </tbody>

        <p><strong>Цена: </strong><span class="price">{{price}}</span></p>
    </table>
{{else}}
    <p>Корзина пуста</p>
{{/if}}